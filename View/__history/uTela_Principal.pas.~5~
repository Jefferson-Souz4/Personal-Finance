{$R *.dfm}
//------------------------Settings StatusBar------------------------------------
procedure TFrm_Tela_Principal.Timer1Timer(Sender: TObject);
begin
  Statusbar1.Panels [2].Text :=FormatDateTime('DDDD', Now);// para data
  Statusbar1.Panels [3].Text := DateTimeToStr(now);//para hora
end;
//*********************Close StatusBar******************************************
end.
